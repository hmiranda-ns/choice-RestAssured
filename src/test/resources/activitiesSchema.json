{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "title": {
        "anyOf": [
          { "type": "string" },
          { "type": "null" }
        ]
      },
      "dueDate": {
        "type": "string",
        "format": "date-time"
      },
      "completed": {
        "type": "boolean"
      }
    },
    "required": ["id", "dueDate", "completed"]
  }
}
